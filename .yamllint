extends: default
rules:
  braces:
    min-spaces-inside: 1
    max-spaces-inside: 1
    min-spaces-inside-empty: 0
    max-spaces-inside-empty: 0
  comments:
    require-starting-space: false
    min-spaces-from-content: 2
  comments-indentation: false
  document-start:
    present: false
  indentation:
    indent-sequences: whatever
  line-length: disable
  truthy:
    allowed-values: ["true", "false", "True", "False", "yes", "no"]
