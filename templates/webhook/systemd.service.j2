[Unit]
Description=webhook
After=network.target

[Service]
ExecStart=/opt/webhook/git/env/bin/uwsgi --socket 127.0.0.1:9080 --wsgi-file app.wsgi --threads 5
WorkingDirectory=/opt/webhook/git
Restart=always
RestartSec=60
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=webhook
User=webhook
Group=webhook

[Install]
WantedBy=default.target
